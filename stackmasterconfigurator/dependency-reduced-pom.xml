<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>de.dennismaass.emp.stonemaster.stackmaster</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>configurator</artifactId>
  <name>StackMaster Configurator</name>
  <organization>
    <name>stonemaster</name>
    <url>www.stonemaster.eu</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <includes>
            <include>**/*Test.class</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>ps1</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <executions>
          <execution>
            <id>stackmaster</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>${mainClass.swing}</mainClass>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>windows</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.akathist.maven.plugins.launch4j</groupId>
            <artifactId>launch4j-maven-plugin</artifactId>
            <version>1.5.2</version>
            <executions>
              <execution>
                <id>l4j-clui</id>
                <phase>package</phase>
                <goals>
                  <goal>launch4j</goal>
                </goals>
                <configuration>
                  <headerType>gui</headerType>
                  <jar>C:\Users\Dennis\git\stackmaster\stackmasterconfigurator\target/configurator-1.0.0-SNAPSHOT.jar</jar>
                  <outfile>C:\Users\Dennis\git\stackmaster\stackmasterconfigurator\target/configurator.exe</outfile>
                  <downloadUrl>http://www.stonemaster.eu/#/products/microscopy/stackmaster/downloads</downloadUrl>
                  <icon>C:\Users\Dennis\git\stackmaster\stackmasterconfigurator/src/main/resources/images/setting_icon_win.ico</icon>
                  <jre>
                    <path>jre</path>
                    <minVersion>1.7.0</minVersion>
                    <jdkPreference>preferJre</jdkPreference>
                  </jre>
                  <versionInfo>
                    <fileVersion>1.0.0.0</fileVersion>
                    <txtFileVersion>1.0.0-SNAPSHOT</txtFileVersion>
                    <fileDescription>Desc</fileDescription>
                    <copyright>2012 stonemaster.eu</copyright>
                    <productVersion>1.0.0.0</productVersion>
                    <txtProductVersion>1.0.0.0</txtProductVersion>
                    <productName>StackMaster Configurator</productName>
                    <internalName>StackMaster Configurator</internalName>
                    <originalFilename>configurator.exe</originalFilename>
                  </versionInfo>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.14.2</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <icon.path>${basedir}/src/main/resources/images/setting_icon_win.ico</icon.path>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <mainClass.swing>de.dennismaass.emp.stonemaster.stackmaster.configurator.ui.swing.SwingStarter</mainClass.swing>
  </properties>
</project>

